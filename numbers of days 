#include <stdio.h>

int main() {
    int daysInMonth, i, workedDays = 0;
    int dayStatus;

    printf("Enter the total number of days in the month: ");
    scanf("%d", &daysInMonth);

    for(i = 1; i <= daysInMonth; i++) {
        printf("Did you work on day %d? (1 for yes, 0 for no): ", i);
        scanf("%d", &dayStatus);

        if(dayStatus == 1) {
            workedDays++;
        }
    }

    printf("Total number of days worked in the month: %d\n", workedDays);

    return 0;
}