#include <stdio.h>

struct Employee
{
    int id;
    char name[50];
    float salary;
};

int main()
{
    FILE *fp;
    struct Employee e;
    int n, i;

    // Input number of employees
    printf("Enter number of employees: ");
    scanf("%d", &n);

    // Open file to write employee details
    fp = fopen("employee.txt", "w");
    if (fp == NULL)
    {
        printf("Error opening file!\n");
        return 1;
    }

    // Input employee details from user and write to file
    for (i = 0; i < n; i++)
    {
        printf("\nEnter details for employee %d\n", i + 1);
        printf("ID: ");
        scanf("%d", &e.id);
        printf("Name: ");
        scanf("%s", e.name);
        printf("Salary: ");
        scanf("%f", &e.salary);

        fprintf(fp, "%d %s %.2f\n", e.id, e.name, e.salary);
    }

    fclose(fp);

    // Now read and display employee details from file
    printf("\nEmployee details from file:\n");
    printf("----------------------------\n");

    fp = fopen("employee.txt", "r");
    if (fp == NULL)
    {
        printf("Error opening file!\n");
        return 1;
    }

    while (fscanf(fp, "%d %s %f", &e.id, e.name, &e.salary) == 3)
    {
        printf("ID: %d\n", e.id);
        printf("Name: %s\n", e.name);
        printf("Salary: %.2f\n\n", e.salary);
    }

    fclose(fp);

    return 0;
}