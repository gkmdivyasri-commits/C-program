#include <stdio.h>

int main() {
    int n, i;
    float rainfall, total = 0, average;

    printf("Enter number of days: ");
    scanf("%d", &n);

    for (i = 1; i <= n; i++) {
        printf("Enter rainfall for day %d: ", i);
        scanf("%f", &rainfall);
        total += rainfall;
    }

    average = total / n;

    printf("Average Rainfall = %.2f\n", average);

    return 0;
}