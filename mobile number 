#include <stdio.h>
#include <string.h>
#include <ctype.h>

int main() {
    char mobile[15];
    int valid = 1; // Assume valid initially

    printf("Enter your mobile number: ");
    scanf("%s", mobile);

    // Check length
    if (strlen(mobile) != 10) {
        valid = 0;
    } else {
        // Check first digit
        if (mobile[0] != '7' && mobile[0] != '8' && mobile[0] != '9') {
            valid = 0;
        }

        // Check all characters are digits
        for (int i = 0; i < 10; i++) {
            if (!isdigit(mobile[i])) {
                valid = 0;
                break;
            }
        }
    }

    if (valid) {
        printf("Mobile number is valid.\n");
    } else {
        printf("Mobile number is invalid.\n");
    }

    return 0;
}