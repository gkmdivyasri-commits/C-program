#include <stdio.h>
#include <string.h>

int main() {
    char str[100];
    
    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin); // safer than gets()
    
    // Remove newline character if present
    if(str[strlen(str)-1] == '\n') {
        str[strlen(str)-1] = '\0';
    }

    int length = strlen(str);
    printf("Length of the string: %d\n", length);
    
    return 0;
}