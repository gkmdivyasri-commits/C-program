#include <stdio.h>

int main() {
    char name[50];
    float salary;

    printf("Enter Employee Name: ");
    scanf(" %[^\n]", name);

    printf("Enter Salary: ");
    scanf("%f", &salary);

    printf("\n--- Salary Slip ---\n");
    printf("Employee Name: %s\n", name);
    printf("Salary       : %.2f\n", salary);

    return 0;
}