#include <stdio.h>

struct Student
{
    int id;
    char name[20];
    float marks;
};

int main()
{
    struct Student s[5];
    int i, n, searchId, found = 0;

    printf("Enter number of students: ");
    scanf("%d", &n);

    // Input student details
    for (i = 0; i < n; i++)
    {
        printf("\nEnter details of student %d\n", i + 1);
        printf("ID: ");
        scanf("%d", &s[i].id);
        printf("Name: ");
        scanf("%s", s[i].name);
        printf("Marks: ");
        scanf("%f", &s[i].marks);
    }

    // ID to update
    printf("\nEnter ID to update record: ");
    scanf("%d", &searchId);

    // Search and update
    for (i = 0; i < n; i++)
    {
        if (s[i].id == searchId)
        {
            printf("\nRecord found. Enter new details:\n");
            printf("New Name: ");
            scanf("%s", s[i].name);
            printf("New Marks: ");
            scanf("%f", &s[i].marks);

            // Display updated record
            printf("\nUpdated Record:\n");
            printf("ID: %d\n", s[i].id);
            printf("Name: %s\n", s[i].name);
            printf("Marks: %.2f\n", s[i].marks);

            found = 1;
            break;
        }
    }

    if (!found)
    {
        printf("\nRecord with ID %d not found.\n", searchId);
    }

    return 0;
}