#include <stdio.h>

struct Student {
    int id;
    char name[50];
    int age;
};

int main() {
    struct Student s[5];
    int i, searchId, found = 0;

    // Input student details
    for (i = 0; i < 5; i++) {
        printf("\nEnter details of student %d\n", i + 1);
        printf("ID: ");
        scanf("%d", &s[i].id);
        printf("Name: ");
        scanf("%s", s[i].name);
        printf("Age: ");
        scanf("%d", &s[i].age);
    }

    // Search by ID
    printf("\nEnter ID to search: ");
    scanf("%d", &searchId);

    for (i = 0; i < 5; i++) {
        if (s[i].id == searchId) {
            printf("\nRecord Found!");
            printf("\nID   : %d", s[i].id);
            printf("\nName : %s", s[i].name);
            printf("\nAge  : %d", s[i].age);
            found = 1;
            break;
        }
    }

    if (!found) {
        printf("\nRecord not found.");
    }

    return 0;
}