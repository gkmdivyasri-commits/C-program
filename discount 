#include <stdio.h>

int main() {
    float price, discount, final_price;

    printf("Enter the total price: ");
    scanf("%f", &price);

    printf("Enter discount percentage: ");
    scanf("%f", &discount);

    final_price = price - (price * discount / 100);

    printf("Total price after discount = %.2f\n", final_price);

    return 0;
}