#include <stdio.h>

#define MAX 50

struct Item {
    int id;
    char name[30];
    int quantity;
    float price;
};

int main() {
    struct Item inv[MAX];
    int count = 0, choice, i, id, found;

    do {
        printf("\n--- Inventory Management System ---\n");
        printf("1. Add Item\n");
        printf("2. Display Items\n");
        printf("3. Search Item\n");
        printf("4. Update Item\n");
        printf("5. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice) {

        case 1:   // Add Item
            printf("Enter Item ID: ");
            scanf("%d", &inv[count].id);
            printf("Enter Item Name: ");
            scanf("%s", inv[count].name);
            printf("Enter Quantity: ");
            scanf("%d", &inv[count].quantity);
            printf("Enter Price: ");
            scanf("%f", &inv[count].price);
            count++;
            printf("Item added successfully!\n");
            break;

        case 2:   // Display Items
            if (count == 0) {
                printf("No items in inventory.\n");
            } else {
                printf("\nID\tName\tQuantity\tPrice\n");
                for (i = 0; i < count; i++) {
                    printf("%d\t%s\t%d\t\t%.2f\n",
                           inv[i].id, inv[i].name,
                           inv[i].quantity, inv[i].price);
                }
            }
            break;

        case 3:   // Search Item
            printf("Enter Item ID to search: ");
            scanf("%d", &id);
            found = 0;

            for (i = 0; i < count; i++) {
                if (inv[i].id == id) {
                    printf("Item Found:\n");
                    printf("ID: %d\nName: %s\nQuantity: %d\nPrice: %.2f\n",
                           inv[i].id, inv[i].name,
                           inv[i].quantity, inv[i].price);
                    found = 1;
                    break;
                }
            }

            if (!found)
                printf("Item not found!\n");
            break;

        case 4:   // Update Item
            printf("Enter Item ID to update: ");
            scanf("%d", &id);
            found = 0;

            for (i = 0; i < count; i++) {
                if (inv[i].id == id) {
                    printf("Enter new Name: ");
                    scanf("%s", inv[i].name);
                    printf("Enter new Quantity: ");
                    scanf("%d", &inv[i].quantity);
                    printf("Enter new Price: ");
                    scanf("%f", &inv[i].price);
                    printf("Item updated successfully!\n");
                    found = 1;
                    break;
                }
            }

            if (!found)
                printf("Item not found!\n");
            break;

        case 5:
            printf("Exiting program...\n");
            break;

        default:
            printf("Invalid choice!\n");
        }

    } while (choice != 5);

    return 0;
}