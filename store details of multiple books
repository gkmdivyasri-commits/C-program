#include <stdio.h>

struct Book {
    int bookId;
    char title[50];
    float price;
};

int main() {
    struct Book b[10];
    int n, i;

    printf("Enter number of books: ");
    scanf("%d", &n);

    for (i = 0; i < n; i++) {
        printf("\nEnter details of book %d\n", i + 1);

        printf("Book ID: ");
        scanf("%d", &b[i].bookId);

        printf("Title: ");
        scanf(" %[^\n]", b[i].title);

        printf("Price: ");
        scanf("%f", &b[i].price);
    }

    printf("\n--- Book Details ---\n");
    for (i = 0; i < n; i++) {
        printf("\nBook %d\n", i + 1);
        printf("Book ID: %d\n", b[i].bookId);
        printf("Title  : %s\n", b[i].title);
        printf("Price  : %.2f\n", b[i].price);
    }

    return 0;
}